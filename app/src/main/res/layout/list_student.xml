<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/rollNo"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="57"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vageshwar Yadav"
        android:layout_toRightOf="@id/rollNo"
        android:layout_marginStart="16dp"
        android:textSize="18sp" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/Email"
    android:layout_below="@id/name"
    android:textSize="16dp"
    android:text="Vageshwaryadav@gmail.com"
    android:layout_toRightOf="@id/rollNo"
    android:layout_marginStart="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/branch"
        android:layout_below="@id/Email"
        android:textSize="16dp"
        android:text="CSE"
        android:layout_toRightOf="@id/rollNo"
        android:layout_marginStart="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gender"
        android:layout_below="@id/Email"
        android:layout_toEndOf="@id/branch"
        android:textSize="16dp"
        android:text="Male"
        android:layout_toRightOf="@id/rollNo"
        android:layout_marginStart="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lg"
        android:text="Languages Known: "
        android:layout_below="@id/branch"
        android:layout_toRightOf="@id/rollNo"
        android:layout_marginStart="16dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/language"
        android:text="C,C++,Java,Python,JavaScript"
        android:layout_below="@id/branch"
        android:layout_toRightOf="@id/lg"
        android:layout_marginStart="16dp"/>
</RelativeLayout>